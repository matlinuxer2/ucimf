#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.59)
AC_INIT(ucimf-openvanilla,2.0.0, ucimf@googlegroups.com)
AM_INIT_AUTOMAKE
AC_CONFIG_SRCDIR([openvanilla.cpp])
AC_CONFIG_HEADER([config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC
AC_PROG_LIBTOOL

# Checks for libraries.
# FIXME: Replace `main' with a function in `-lltdl':
AC_CHECK_LIB([ltdl], [main])

# Checks for header files.
AC_HEADER_DIRENT
AC_CHECK_HEADERS([locale.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_HEADER_STDBOOL
AC_TYPE_SIZE_T

# Checks for library functions.
AC_FUNC_CLOSEDIR_VOID
AC_HEADER_STDC
AC_CHECK_FUNCS([memset setlocale strstr])

if test "x$OV_MODULEDIR" = "x"; then
   OV_MODULEDIR="/usr/lib/openvanilla/"
fi

AC_SUBST(OV_MODULEDIR)

AC_CONFIG_FILES([Makefile])
AC_OUTPUT
